<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Update A User</title>
    <link rel="stylesheet" href="/css/styles.css" />
  </head>

  <body>
    <div class="topnav">
      <a href="/">Home</a>
      <a href="/create">Create Users</a>
    </div>
    <div class="form-add-new">
      <form action="/edit-user" method="POST">
        <fieldset>
          <legend>Update a user</legend>
          <div class="input-group">
            <label>STT: </label>
            <input type="text" name="id" value="<%= userEdit.id %>" />
          </div>
          <div class="input-group">
            <label>Email: </label>
            <input type="text" id="emailId" name="email" />
            <input type="text" value="<%= userEdit.email %>" />
          </div>
          <div class="input-group">
            <label>Name: </label>
            <input type="text" name="name" />
            <input type="text" value="<%= userEdit.name %>" />
          </div>
          <div class="input-group">
            <label>City: </label>
            <input type="text" name="city" />
            <input type="text" value="<%= userEdit.city %>" />
          </div>

          <div>
            <button>Save</button>
          </div>
        </fieldset>
      </form>
    </div>
  </body>
</html>
